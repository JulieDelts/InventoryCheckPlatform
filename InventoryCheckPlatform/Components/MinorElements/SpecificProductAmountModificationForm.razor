@rendermode RenderMode.InteractiveServer

<EditForm Model="@ExtendedSpecificProductlWithAmount" OnValidSubmit="@Submit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Количество:<span class="text-danger">*</span></label>
        <InputNumber @bind-Value="ExtendedSpecificProductlWithAmount.Amount" Placeholder="@ExtendedSpecificProductlWithAmount.Amount" class="form-control" />
        <div class="row">
            <div class="col-md-12 text-center">
                <button @onclick="Decrement" class="btn btn-secondary">-</button>
                <button @onclick="Increment" class="btn btn-secondary">+</button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-center">
            <input class="btn btn-success" type="submit" value="Подтвердить">
            <input class="btn btn-light" type="reset" value="Сбросить" @onclick="Refresh">
        </div>
    </div>
</EditForm>

@code
{
    [Parameter]
    public ExtendedSpecificProductInputModelWithAmount ExtendedSpecificProductlWithAmount { get; set; }

    public void Submit()
    {
        Console.WriteLine($"Изменилось!");
    }

    private void Refresh()
    {
        ExtendedSpecificProductlWithAmount.Amount = new();
    }

    private void Increment()
    {
        ExtendedSpecificProductlWithAmount.Amount++;
    }

    private void Decrement()
    {
        ExtendedSpecificProductlWithAmount.Amount--;
    }
}