@rendermode RenderMode.InteractiveServer

<EditForm Model="@ExtendedBaseProduct" OnValidSubmit="@Submit">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="mb-3">
        <label class="form-label">Название:<span class="text-danger">*</span></label>
        <InputText @bind-Value="ExtendedBaseProduct.Name" Placeholder="@ExtendedBaseProduct.Name" />
    </div>
    <div class="mb-3">
        <label class="form-label">Категория:</label>
        <InputText @bind-Value="ExtendedBaseProduct.Category" Placeholder="@ExtendedBaseProduct.Category" />
    </div>
    <div class="row">
        <div class="col-md-12 text-right">
            <Button Type="ButtonType.Button" Color="ButtonColor.Secondary" Class="float-end" @onclick="ResetForm">Сбросить</Button>
            <Button Type="ButtonType.Submit" Color="ButtonColor.Success" Class="float-end me-2">Подтвердить</Button>
        </div>
    </div>
</EditForm>

@code
{
    [Parameter]
    public ExtendedBaseProductInputModel ExtendedBaseProduct { get; set; }

    public void Submit()
    {
        Console.WriteLine($"Изменилось!");
    }

    private void ResetForm()
    {
        ExtendedBaseProduct = new();
    }

    protected override void OnInitialized()
    {
        base.OnInitialized();
    }
}